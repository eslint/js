{
  "name": "eslint-js",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,cjs,ts,cts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^9.35.0",
    "eslint-config-eslint": "^13.0.0",
    "eslint-plugin-chai-friendly": "^1.0.0",
    "globals": "^16.0.0",
    "lint-staged": "^15.2.0",
    "mocha": "^11.1.0",
    "yorkie": "^2.0.0"
  }
}
