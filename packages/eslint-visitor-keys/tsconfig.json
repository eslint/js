{
  "compilerOptions": {
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["lib/**/*.js"],
  "exclude": ["node_modules"]
}
