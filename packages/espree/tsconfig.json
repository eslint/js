{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "target": "es5",
    "outDir": "dist"
  },
  "include": ["espree.js", "lib/**/*.js"],
  "exclude": ["node_modules"]
}
